@* Maximiliano De Santiago *@
@model List<Temp>

@{
    ViewData["Title"] = "Food Manager";
}
<h2 class="p-2">Foods</h2>
<h4 class="p-2">Entrees</h4>

<a asp-action="AddEntree" class="btn btn-dark mr-2">Add an Entree</a>

<table class="table table-striped mt-2">
    <thead>
        <tr><th>Date</th><th>High</th><th>Low</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (Temp temp in Model)
        {
            <tr>
                <td>@temp.Date?.ToShortDateString()</td>
                <td>@temp.Low</td>
                <td>@temp.High</td>
                <td><a asp-action="DeleteEntree" asp-route-id="@temp.Id" class="btn btn-dark">Delete Entree</a></td>
            </tr>
        }
    </tbody>
</table>

