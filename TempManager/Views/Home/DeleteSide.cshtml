@* Maximiliano De Santiago *@
@model Side

@{
    ViewData["Title"] = "Add";
}

<h2 class="p-2">Delete Side</h2>
<table class="table">
    <thead><tr><th>Date</th><th>Low</th><th>High</th></tr></thead>
    <tbody>
        <tr>
            <td>@Model.Date?.ToShortDateString()</td>
            <td>@Model.Name</td>
            <td>@Model.Description</td>
        </tr>
    </tbody>
</table>

<form asp-action="Delete Side" method="post">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-dark mr-2">Delete</button>
    <a asp-action="Index" class="btn btn-dark">Cancel</a>
</form>