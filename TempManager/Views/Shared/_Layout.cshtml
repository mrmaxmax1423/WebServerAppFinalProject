<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <h1 class="bg-danger p-3 display-1 text-center text-black">Food Manager</h1>
    </header>


    <!--Attempting to add a navbar-->
    <div  class="container">
        <nav class="navbar navbar-expand-sm bg-info navbar-dark">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a asp-action="index" asp-controller="home" class="nav-link">Home</a>
                </li>
                <li class="nav-item">
                    <a asp-action="aboutus" asp-controller="home" class="nav-link">About Us</a>
                </li>
                <li class="nav-item">
                    <a asp-action="index" asp-controller="Dessert" class="nav-link">Desserts</a>
                </li>
                <li class="nav-item">
                    <a asp-action="index" asp-controller="Entree" class="nav-link">Entrees</a>
                </li>
                <li class="nav-item">
                    <a asp-action="index" asp-controller="Side" class="nav-link">Sides</a>
                </li>
            </ul>
        </nav>

        <div>
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
